@using OutdoorsActivityWebApp.Data.Models
@using OutdoorsActivityWebApp.Data.Utilities

@page "/CreateActivity"

<div class="card shadow border-0 m-4">
    <div class="card-header bg-black bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@(ActivityId > 0 ? "Update" : "Create") Activity</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <EditForm Model="Activity" FormName="ActivityUpsertForm" OnValidSubmit="UpsertActivity">
                <DataAnnotationsValidator/>
                <div class="border p-3 mt-4">
                    <div class="form-floating py-3 col-12">
                        <InputText @bind-Value="Activity.Title" class="form-control" id="Title" />
                        <label for="Title">Title</label>
                        <ValidationMessage For="@(() => Activity.Title)" />
                    </div>
                    <div class="form-floating py-3 col-12">
                        <label for="Description">Description</label>
                        <br/>
                        <InputText @bind-Value="Activity.Desc" class="form-control" id="Description" />
                        <ValidationMessage For="@(() => Activity.Desc)" />
                    </div>
                    <div class="form-floating py-3 col-12">
                        <InputSelect @bind-Value="Activity.Type" class="form-control" id="AcType">
                            @foreach (var type in Enum.GetNames(typeof(SD.ActivityType)))
                            {
                                // Iterate the activity types - add the option to the select
                                <option value="@type">@type.ToReadableString()</option>
                            }    
                        </InputSelect>
                        <label for="AcType">Activity Type</label>
                        <ValidationMessage For="@(() => Activity.Type)" />
                    </div>
                    <div class="row mt-3">
                        <div class="col-6 col-md-3">
                            <button type="submit" class="btn btn-primary form-control">
                                <i class="bi bi-save"></i> @(ActivityId > 0 ? "Update" : "Create")
                            </button>
                        </div>
                        <div class="col-6 col-md-3">
                            <a class="btn btn-secondary form-control" href="product">
                                <i class="bi bi-x-octagon"></i> Cancel
                            </a>
                        </div>
                    </div>
                </div>
            </EditForm>
        </div>
    </div>
</div>
@code {
    public int ActivityId { get; set; }
    private Activity Activity { get; set; } = new Activity();

    public void UpsertActivity()
    {
        
    }

}
